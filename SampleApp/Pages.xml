<PagesViewController backgroundColor="#ddd">
    <UIScrollView
        contentInset.bottom="safeAreaInsets.bottom"
        contentInset.top="max(safeAreaInsets.top + 10, 20)"
        contentInsetAdjustmentBehavior="never"
        contentSize.height="100% - contentInset.top - contentInset.bottom"
        contentSize.width="300%"
        isPagingEnabled="true"
        outlet="scrollView"
        showsHorizontalScrollIndicator="false">

        <!-- Page 1 -->
        <UIView
            backgroundColor="#f33"
            template="PageTemplate.xml"
            text="Page 1"
        />

        <!-- Page 2 -->
        <UIView
            backgroundColor="#3a3"
            left="previous.right + 40"
            template="PageTemplate.xml"
            text="Page 2"
        />

        <!-- Page 3 -->
        <UIView
            backgroundColor="#09f"
            left="previous.right + 40"
            template="PageTemplate.xml"
            text="Page 3"
        />
    </UIScrollView>
    <UIPageControl
        bottom="100% - parent.safeAreaInsets.bottom - 40"
        isUserInteractionEnabled="false"
        left="50% - (width / 2)"
        numberOfPages="3"
        outlet="pageControl"
    />
</PagesViewController>
